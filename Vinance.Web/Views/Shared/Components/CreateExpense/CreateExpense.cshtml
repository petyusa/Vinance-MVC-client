@model CreateExpenseViewmodel

<div class="form-container">
    <form asp-controller="Expense" 
          asp-action="Create" 
          data-ajax="true" 
          data-ajax-method="POST" 
          data-ajax-mode="replace" 
          data-ajax-update="#main-page-tables" 
          data-ajax-success="showAlert({message: 'Expense successfully created.', class: 'success'})"
          data-ajax-failure="showAlert({message: 'There was an error', class: 'danger'})">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="text" class="form-control text-right" id="expense-datetimepicker" data-toggle="datetimepicker" data-target="#expense-datetimepicker" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control text-right" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Comment"></label>
            <input asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FromId"></label>
            <select asp-for="FromId" asp-items="Model.AccountList" class="custom-select">
                <option value="" disabled selected>Select your option</option>
            </select>
            <span asp-validation-for="FromId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="Model.CategoryList" class="custom-select"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
<script type="text/javascript">
    initializeDatetimepicker("expense-datetimepicker");
</script>