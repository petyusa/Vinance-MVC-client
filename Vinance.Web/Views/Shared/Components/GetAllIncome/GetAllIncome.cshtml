@model IEnumerable<Vinance.Contracts.Models.Domain.Income>

<table class="table table-dark table-striped" id="income-list">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            <button onclick="show()" class="btn btn-primary btn-sm">Add Account</button>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Date.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <form asp-controller="Income"
                      asp-action="Delete"
                      data-ajax-method="POST"
                      data-ajax="true"
                      data-ajax-update="#income-list"
                      data-ajax-mode="replace"
                      data-ajax-success="showAlert({message: 'Income successfully deleted', class:'success'})">
                    <input asp-for="@item.Id" class="d-none" name="incomeId">
                    <input type="submit" value="delete" class="btn btn-sm btn-danger" />
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>