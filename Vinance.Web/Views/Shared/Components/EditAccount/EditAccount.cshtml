@model Vinance.Contracts.Models.Domain.Account

<div class="form-container">
    <form asp-action="Edit"
          asp-controller="Account"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-update="#account-list"
          data-ajax-mode="replace"
          data-ajax-success="showAlert({message: 'Számla módosítva'. class: 'success'})">
        <input asp-for="Id" class="d-none"/>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input type="submit" value="Módosítás" class="btn btn-primary"/>
    </form>
</div>