@model Vinance.Contracts.Models.Domain.Account

<form id="edit-account-form"
      asp-controller="Account"
      asp-action="Edit"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-update="#account-list"
      data-ajax-mode="replace"
      data-ajax-success="showAlert({message:'Számla módosítva', class: 'success'})"
      data-ajac-fail="showAlert({message:'Hiba történt', class: 'danger'})"></form>
<tr>
    <td class="input-td" colspan="2">
        <input asp-for="Name" placeholder="Név" class="table-input" form="edit-account-form" />
        <input asp-for="Id" class="d-none" form="edit-account-form" />
    </td>
    <td class="text-right">
        <button type="submit" class="btn-table text-success" form="edit-account-form"><i data-feather="check"></i></button>
    </td>
</tr>