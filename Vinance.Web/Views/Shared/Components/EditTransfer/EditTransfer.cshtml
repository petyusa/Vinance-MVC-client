@model Vinance.Web.Models.CreateTransferViewmodel
<div class="form-container">
    <form id="edit-transfer-form"
          asp-controller="Transfer"
          asp-action="Edit"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-mode="replace"
          data-ajax-update="#transfer-list"
          data-ajax-success="vinance.showAlert({message: 'Pénzmozgás módosítva.', class: 'success'})"
          data-ajax-failure="vinance.showAlert({message: 'Hiba történt.', class: 'danger'})">
        <input asp-for="Id" class="d-none" />
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="text" class="form-control text-right" id="transfer-datetimepicker" data-toggle="datetimepicker" data-target="#transfer-datetimepicker" value="@Model.Date.ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control text-right" />
        </div>
        <div class="form-group">
            <label asp-for="Comment"></label>
            <input asp-for="Comment" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="FromId"></label>
            <select asp-for="FromId" asp-items="Model.AccountList" class="custom-select"></select>
        </div>
        <div class="form-group">
            <label asp-for="ToId"></label>
            <select asp-for="ToId" asp-items="Model.AccountList" class="custom-select"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Módosítás" class="btn btn-primary" />
        </div>
    </form>
</div>
<script type="text/javascript">
    vinance.initDatePicker("transfer-datetimepicker");
    $.validator.unobtrusive.parse('#edit-transfer-form');
</script>