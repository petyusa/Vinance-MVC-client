@model IEnumerable<Vinance.Contracts.Models.Domain.Category>

<table class="table table-bordered table-sm table-striped" id="category-list">
    <thead class="thead-dark form-group">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var width = Math.Floor((item.Balance / (double)item.MonthlyLimit)*100);
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-right">
                @item.Balance.ToString("### ### ###")Ft
            </td>
            <td style="width: 100px; padding: 0">
                <div style="width: @width%; height: 20px; background-color: red"></div>
            </td>
            <td>
                <div style="width: 50px; height: 20px; background-color: red;"></div>
            </td>
        </tr>
        }
    </tbody>
</table>
