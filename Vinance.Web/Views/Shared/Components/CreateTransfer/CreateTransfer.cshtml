@model CreateTransferViewmodel

<div class="form-container">
    <form asp-controller="Transfer"
          asp-action="Create"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-mode="replace"
          data-ajax-update="#main-page-tables"
          data-ajax-success="showAlert({message: 'Pénzmozgás hozzáadva.', class: 'success'})"
          data-ajax-failure="showAlert({message: 'Hiba történt.', class: 'danger'})">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="text" class="form-control text-right" autocomplete="off" id="transfer-datetimepicker" data-toggle="datetimepicker" data-target="#transfer-datetimepicker" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control text-right"/>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Comment"></label>
            <input asp-for="Comment" class="form-control" />
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FromId"></label>
            <select asp-for="FromId" asp-items="Model.AccountList" class="custom-select"></select>
            <span asp-validation-for="FromId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ToId"></label>
            <select asp-for="ToId" asp-items="Model.AccountList" class="custom-select">
                <option value="" disabled selected>Válassz számlát</option>
            </select>
            <span asp-validation-for="ToId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="Model.CategoryList" class="custom-select">
                <option value="" disabled selected>Válassz számlát</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Hozzáadás" class="btn btn-primary" />
        </div>
    </form>
</div>
<script type="text/javascript">
    initializeDatetimepicker("transfer-datetimepicker");
</script>