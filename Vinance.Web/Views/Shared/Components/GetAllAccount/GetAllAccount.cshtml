@model IEnumerable<Vinance.Contracts.Models.Domain.Account>
<table class="table table-dark table-striped" id="account-list">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                <button onclick="show()" class="btn btn-primary btn-sm">Add Account</button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    <form asp-controller="Account"
                          asp-action="Delete"
                          data-ajax-method="POST"
                          data-ajax="true"
                          data-ajax-update="#account-list"
                          data-ajax-mode="replace"
                          data-ajax-success="showAlert({message: 'Account successfully deleted', class:'success'})">
                        <input asp-for="@item.Id" class="d-none" name="accountId">
                        <input type="submit" value="delete" class="btn btn-sm btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>