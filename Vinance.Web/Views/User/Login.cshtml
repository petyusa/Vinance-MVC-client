@model Vinance.Web.Models.Identity.LoginViewmodel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="form-container">
            <form asp-controller="User" asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input class="form-control" asp-for="UserName" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" type="password">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe"></label>
                </div>
                <button class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
